html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    body 

        section(style="text-align:center")
            h2(class="text-secondary") Ingrese Producto 

            div(style="width:35%; margin:0 auto")    
                form(action='/productos' method='POST'  style="text-align:center")
                    div(class=classDiv)
                        label(class=classLabel for='title') Nombre
                        input.form-control(type='text' name='title' required)
                    div(class=classDiv)
                        label(class=classLabel for='price') Precio
                        input.form-control(type='number' name='price' required)
                    div(class=classDiv)
                        label(class=classLabel for='thumbnail') Foto URL
                        input.form-control(type='url' name='thumbnail' required)
                    div(class=classDiv)
                    
                        input.btn.btn-success(type='submit' value='Agregar Producto' )
                div(class=classDiv)
                    a(href="/productos")
                        button.btn.btn-info Ver Productos