<h1 class='text-secondary text-center'>Listado de productos</h1>
{{#if products}}
  <div class='container'>
    <div class='row'>
      <div class='col'>
        <table class='table table-dark table-striped table-hover align-middle'>
          <thead>
            <tr>
              <th class='text-center'>Nombre</th>
              <th class='text-center'>Precio</th>
              <th class='text-center'>Foto</th>
            </tr>
          </thead>
          <tbody>
            {{#each products}}
              <tr>
                <td class='align-middle text-center'>{{this.title}}</td>
                <td class='align-middle text-center'>${{this.price}}</td>
                <td class='align-middle text-center'><img src='{{this.thumbnail}}' width='50' height='auto' class='img-fluid' /></td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

{{else}}
  <div>
    <h2 class='text-center'>No hay productos</h2>
    <div>
      <a href='/'>
        <button class='btn btn-success d-block mx-auto'> Agregar producto</button>
      </a>
    </div>
  </div>

{{/if}}